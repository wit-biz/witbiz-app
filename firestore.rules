/**
 * @file Firestore Security Rules for WitCRM application.
 *
 * @description This ruleset enforces a strict user-ownership model for Leads, Contacts, and Tasks.
 * All data is nested under /users/{userId}, ensuring that only the authenticated user can access their own data.
 *
 * Data Structure:
 * - /users/{userId}/leads/{leadId}: Stores lead data for a specific user.
 * - /users/{userId}/contacts/{contactId}: Stores contact data for a specific user.
 * - /users/{userId}/tasks/{taskId}: Stores task data for a specific user.
 *
 * Key Security Decisions:
 * - Users can only access data nested under their own /users/{userId} path.
 * - Listing other user's documents is disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================
    // üß† Validation functions
    // ======================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // ======================================
    // üë§ User access
    // ======================================

    /**
     * @description Allows a user to read and write their own profile document.
     * @path /users/{userId}
     * @allow (read, write) if request.auth.uid == {userId}
     * @deny (read, write) if request.auth.uid != {userId}
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);

      // ======================================
      // üìÅ User subcollections
      // ======================================

      /**
       * @description Allows the user to read, create, update, and delete documents in their subcollections (leads, contacts, tasks).
       * @path /users/{userId}/leads/{leadId}
       * @allow (get, list) if request.auth.uid == {userId}
       * @allow (create) if request.auth.uid == {userId}
       * @allow (update, delete) if request.auth.uid == {userId}
       * @deny (get, list, create, update, delete) if request.auth.uid != {userId}
       * @principle Enforces document ownership for subcollections.
       */
      match /leads/{leadId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

            /**
       * @description Allows the user to read, create, update, and delete documents in their subcollections (leads, contacts, tasks).
       * @path /users/{userId}/contacts/{contactId}
       * @allow (get, list) if request.auth.uid == {userId}
       * @allow (create) if request.auth.uid == {userId}
       * @allow (update, delete) if request.auth.uid == {userId}
       * @deny (get, list, create, update, delete) if request.auth.uid != {userId}
       * @principle Enforces document ownership for subcollections.
       */
      match /contacts/{contactId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Allows the user to read, create, update, and delete documents in their subcollections (leads, contacts, tasks).
       * @path /users/{userId}/tasks/{taskId}
       * @allow (get, list) if request.auth.uid == {userId}
       * @allow (create) if request.auth.uid == {userId}
       * @allow (update, delete) if request.auth.uid == {userId}
       * @deny (get, list, create, update, delete) if request.auth.uid != {userId}
       * @principle Enforces document ownership for subcollections.
       */
      match /tasks/{taskId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }


      // ======================================
      // üìÇ Additional sub-levels (variable depth)
      // ======================================

      /**
       * @description Allows the user to read and write any deeply nested documents under their user ID.
       * @path /users/{userId}/{document=**}
       * @allow (read, write) if request.auth.uid == {userId}
       * @deny (read, write) if request.auth.uid != {userId}
       * @principle Enforces document ownership for all nested data.
       */
      match /{document=**} {
        allow get: if isOwner(userId);
        allow list: if false;
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }
    }

    // ======================================
    // üö´ Deny everything not declared
    // ======================================

    /**
     * @description Denies all read and write access to any path not explicitly allowed above.
     * @path /{document=**}
     * @deny (read, write) always
     * @principle Implements a default-deny security policy.
     */
    match /{document=**} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}