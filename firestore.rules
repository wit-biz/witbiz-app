/**
 * @file Firestore Security Rules for WitCRM
 * @core_philosophy This ruleset enforces a strict user-ownership model, where users can only access data explicitly associated with their user ID.
 * @data_structure All user-specific data (leads, contacts, tasks) is nested under the `/users/{userId}` collection.  The `userId` parameter MUST match the authenticated user's UID.
 * @key_security_decisions User listing is implicitly denied (no top-level `allow list` on `/users`). All data is private by default, requiring explicit rules for access.
 * @denormalization Authorization decisions are based on the path (e.g., /users/{userId}) and/or fields within the documents themselves (e.g., task.assignedTo), avoiding costly `get()` calls to other documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Rules for the /users/{userId} collection.  Users can only create their own profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not permitted.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id; //Enforce immutability of user ID
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/tasks/{taskId} subcollection. Users can only access tasks they own.
     * @path /users/{userId}/tasks/{taskId}
     */
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Rules for the /users/{userId}/documents/{documentId} subcollection. Users can only access documents they own.
     * @path /users/{userId}/documents/{documentId}
     */
    match /users/{userId}/documents/{documentId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/clients/{clientId} subcollection. Users can only access clients they own.
     * @path /users/{userId}/clients/{clientId}
     */
    match /users/{userId}/clients/{clientId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/leads/{leadId} subcollection.  Users can only access leads they own.
     * @path /users/{userId}/leads/{leadId}
     */
    match /users/{userId}/leads/{leadId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/contacts/{contactId} subcollection.  Users can only access contacts they own.
     * @path /users/{userId}/contacts/{contactId}
     */
    match /users/{userId}/contacts/{contactId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Rules for listing and accessing the /users/{userId}/serviceWorkflows collection and its documents.
     * This recursive match ensures list, get, and write operations are allowed for the owner.
     * @path /users/{userId}/serviceWorkflows/{workflowId=**}
     */
    match /users/{userId}/serviceWorkflows/{workflowId=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
    }

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}
