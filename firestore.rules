/**
 * @fileoverview Firestore Security Rules for WitCRM application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for leads, contacts, and tasks. Each user has full control over the data nested under their /users/{userId} path.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, including leads, contacts, and tasks. This hierarchical structure simplifies access control.
 *
 * Key Security Decisions:
 * - No public data access: All reads and writes are restricted to the authenticated user.
 * - Path-based ownership: The authenticated user's UID must match the {userId} path parameter for all operations.
 * - Denormalization is not required as path-based ownership simplifies rules and avoids costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants the user identified by {userId} complete control over the leads located under their respective path.
     * @path /users/{userId}/leads/{leadId}
     * @allow (create) User "lbz7nN49aERC4AwnsGSruB6spQJ3" can create a new lead document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/leads.
     * @deny (create) User "otherUser" cannot create a lead document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/leads.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/leads/{leadId} {
      // Helper function to check if the authenticated user is the owner of the document.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Helper function to check if the authenticated user is the owner of an existing document.
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      // Read operations: get and list
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write operations: create, update, and delete
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants the user identified by {userId} complete control over the contacts located under their respective path.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (create) User "lbz7nN49aERC4AwnsGSruB6spQJ3" can create a new contact document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/contacts.
     * @deny (create) User "otherUser" cannot create a contact document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/contacts.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/contacts/{contactId} {
      // Helper function to check if the authenticated user is the owner of the document.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Helper function to check if the authenticated user is the owner of an existing document.
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      // Read operations: get and list
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write operations: create, update, and delete
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants the user identified by {userId} complete control over the tasks located under their respective path.
     * @path /users/{userId}/tasks/{taskId}
     * @allow (create) User "lbz7nN49aERC4AwnsGSruB6spQJ3" can create a new task document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/tasks.
     * @deny (create) User "otherUser" cannot create a task document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/tasks.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/tasks/{taskId} {
      // Helper function to check if the authenticated user is the owner of the document.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Helper function to check if the authenticated user is the owner of an existing document.
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      // Read operations: get and list
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write operations: create, update, and delete
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}