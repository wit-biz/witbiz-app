/**
 * @fileoverview Firestore Security Rules for WitCRM application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for leads, contacts, and tasks.
 * Each user has complete control over the data nested under their respective /users/{userId} path.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, creating a hierarchical data organization.
 * Leads: /users/{userId}/leads/{leadId}
 * Contacts: /users/{userId}/contacts/{contactId}
 * Tasks: /users/{userId}/tasks/{taskId}
 *
 * Key Security Decisions:
 * - User listing is implicitly disallowed as there are no rules on the root /users collection.
 * - All writes are protected by authorization checks, preventing unauthorized data modification.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces owner-only access to leads for all operations.
     * @path /users/{userId}/leads/{leadId}
     * @allow (create) User with UID 'lbz7nN49aERC4AwnsGSruB6spQJ3' can create a lead document with the lead's userId field equal to 'lbz7nN49aERC4AwnsGSruB6spQJ3'.
     * @deny (create) User with UID 'otherUserId' cannot create a lead document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/leads/ with a mismatched userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/leads/{leadId} {
      // Helper function to check if the request is made by the owner of the resource
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      // Helper function to check if the request is made by the owner of an existing resource
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == leadId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces owner-only access to contacts for all operations.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (create) User with UID 'lbz7nN49aERC4AwnsGSruB6spQJ3' can create a contact document with the contact's userId field equal to 'lbz7nN49aERC4AwnsGSruB6spQJ3'.
     * @deny (create) User with UID 'otherUserId' cannot create a contact document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/contacts/ with a mismatched userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/contacts/{contactId} {
       // Helper function to check if the request is made by the owner of the resource
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      // Helper function to check if the request is made by the owner of an existing resource
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == contactId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces owner-only access to tasks for all operations.
     * @path /users/{userId}/tasks/{taskId}
     * @allow (create) User with UID 'lbz7nN49aERC4AwnsGSruB6spQJ3' can create a task document with the task's userId field equal to 'lbz7nN49aERC4AwnsGSruB6spQJ3'.
     * @deny (create) User with UID 'otherUserId' cannot create a task document under /users/lbz7nN49aERC4AwnsGSruB6spQJ3/tasks/ with a mismatched userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/tasks/{taskId} {
      // Helper function to check if the request is made by the owner of the resource
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      // Helper function to check if the request is made by the owner of an existing resource
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == taskId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }
  }
}