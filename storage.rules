
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public assets folder (logos, avatars, etc)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // All other paths require authentication
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
