{
  "entities": {
    "Contact": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Contact",
      "type": "object",
      "description": "Represents a customer contact.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Contact entity."
        },
        "firstName": {
          "type": "string",
          "description": "First name of the contact."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the contact."
        },
        "email": {
          "type": "string",
          "description": "Email address of the contact.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "Phone number of the contact."
        },
        "company": {
          "type": "string",
          "description": "Company the contact works for."
        },
        "leadId": {
          "type": "string",
          "description": "Reference to Lead. (Relationship: Lead 1:N Contact)"
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email"
      ]
    },
    "Lead": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Lead",
      "type": "object",
      "description": "Represents a potential customer lead.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Lead entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the lead."
        },
        "status": {
          "type": "string",
          "description": "Current status of the lead (e.g., New, Contacted, Qualified, Closed)."
        },
        "source": {
          "type": "string",
          "description": "Source of the lead (e.g., Web, Referral, Trade Show)."
        },
        "estimatedValue": {
          "type": "number",
          "description": "Estimated value of the lead."
        }
      },
      "required": [
        "id",
        "name",
        "status"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task assigned to a team member.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Task entity."
        },
        "description": {
          "type": "string",
          "description": "Description of the task."
        },
        "dueDate": {
          "type": "string",
          "description": "Due date for the task.",
          "format": "date-time"
        },
        "assignedTo": {
          "type": "string",
          "description": "The team member user id this task is assigned to."
        },
        "completed": {
          "type": "boolean",
          "description": "Indicates whether the task is completed or not."
        },
        "leadId": {
          "type": "string",
          "description": "Reference to Lead. (Relationship: Lead 1:N Task)"
        }
      },
      "required": [
        "id",
        "description",
        "dueDate",
        "assignedTo",
        "completed"
      ]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client in the CRM.",
      "properties": {
        "id": { "type": "string", "description": "Unique client ID." },
        "name": { "type": "string" },
        "owner": { "type": "string" },
        "category": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document associated with a client.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "uploadedAt": { "type": "string", "format": "date-time" },
        "clientId": { "type": "string" }
      },
      "required": ["id", "name", "type", "clientId"]
    },
    "Note": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Note",
      "type": "object",
      "description": "Represents a note for a client.",
      "properties": {
        "id": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "clientId": { "type": "string" }
      },
      "required": ["id", "content", "clientId"]
    },
    "Reservation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reservation",
      "type": "object",
      "description": "Represents a booking or reservation.",
      "properties": {
        "id": { "type": "string" },
        "clientName": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "time": { "type": "string", "format": "time" }
      },
      "required": ["id", "clientName", "date", "time"]
    },
    "ServiceWorkflow": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ServiceWorkflow",
      "type": "object",
      "description": "Defines a service workflow with stages and objectives.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}/leads/{leadId}": {
      "schema": { "$ref": "#/entities/Lead" },
      "description": "Stores leads for a user."
    },
    "/users/{userId}/contacts/{contactId}": {
      "schema": { "$ref": "#/entities/Contact" },
      "description": "Stores contacts for a user."
    },
    "/users/{userId}/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Stores tasks for a user."
    },
    "/users/{userId}/clients/{clientId}": {
      "schema": { "$ref": "#/entities/Client" },
      "description": "Stores clients for a user."
    },
    "/users/{userId}/documents/{documentId}": {
      "schema": { "$ref": "#/entities/Document" },
      "description": "Stores documents for a user."
    },
    "/users/{userId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" },
      "description": "Stores notes for a user."
    },
    "/users/{userId}/bookings/{bookingId}": {
      "schema": { "$ref": "#/entities/Reservation" },
      "description": "Stores bookings/reservations for a user."
    },
    "/users/{userId}/serviceWorkflows/{workflowId}": {
      "schema": { "$ref": "#/entities/ServiceWorkflow" },
      "description": "Stores service workflows for a user."
    }
  }
}

    